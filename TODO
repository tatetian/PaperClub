Controller
  User
    show        member    GET   /api/club/<club_id>/users
    create      all       POST  /api/users
    update      self      PUT   /api/user/<user_id>
  Club
    index       member    GET   /api/clubs
    show        member    GET   /api/club/<club_id>
    create      signin    POST  /api/clubs
    update      admin     PUT   /api/club/<club_id>
    destroy     admin     DEL   /api/club/<club_id>

    Paper 
      index       member    GET   /api/club/<club_id>/papers?tag_id=..&keywords[]=..
      show        member    GET   /api/club/<club_id>/paper/<paper_id>
      create      member    POST  /api/club/<club_id>/papers
      update      member    PUT   /api/club/<club_id>/paper/<paper_id>
      destroy     member    DEL   /api/club/<club_id>/paper/<paper_id>
      
      Tag
        index     member    GET   /api/club/<club_id>/paper/<paper_id>/tags
        create    member    POST  /api/club/<club_id>/paper/<paper_id>/tags  
        destroy   member    DEL   /api/club/<club_id>/paper/<paper_id>/tag/<tag_id>

      Note
        index     member    GET   /api/club/<club_id>/paper/<paper_id>/notes
        create    member    POST  /api/club/<club_id>/paper/<paper_id>/notes          

    Tag  
      index     member    GET     /api/club/<club_id>/tags
      create    member    POST    /api/club/<club_id>/tags
      update    member    PUT     /api/club/<club_id>/tag/<tag_id>
      destroy   member    DEL     /api/club/<club_id>/tag/<tag_id>
      
    Note
      show      member    GET   /api/club/<club_id>/note/<note_id>
      update    member    PUT   /api/club/<club_id>/note/<note_id>
      destroy   member    DEL   /api/club/<club_id>/note/<note_id> 

      Reply
        index   member    GET   /api/club/<club_id>/note/<note_id>/replies/
        create  member    POST  /api/club/<club_id>/note/<note_id>/replies/
        destroy owner     DEL   /api/club/<club_id>/note/<note_id>/reply/<reply_id>

