<script type="text/template" id="club-screen-paper-item">
<div class="fl column-62">
  <div class="title fs26 font-c color-black fs-ita" style="line-height:32px;">
    <a href="#/papers/<%%= id %>"><%%= title %></a>
  </div>
  <div class="footer color-grey2 fs13 font-c" style="line-height:32px;height:32px;">
    <a class="ml10" style="margin-left:32px;"><em class="font-icon color-grey1 p-btn-fav" style="font-size:32px;line-height:32px;">*</em><%%= num_favs %></a>
    <span class="ml10"><em class="fs36 font-icon color-grey1" style="font-size:32px;line-height:32px;">E</em><%%= num_reads %></span>
    <span class="ml10"><em class="fs36 font-icon color-grey1" style="font-size:32px;line-height:32px;">b</em><%%= num_notes %></span>
    <em class="fs36 font-icon color-grey1" style="margin-left:10px;font-size:32px;">J</em>
    <%% if(tags.length > 0) { _.each(tags, function(tag, index) { %>
      <i class="mr5">
        <%%= tag.name %><%%= ( index >= tags.length-1 ? "" : "," ) %>
      </i>    
    <%% }); } else { %>
      <i class="mr5">(no tags)</i>
    <%% } %>
  </div>
</div>
<div class="fl column-38" style="">
  <div style="margin-top: 15px; width: 100%;">
  </div>
  <%% if (news.content.length > 0) { %>
    <div class="fs36 font-c fw-bold color-grey2" style="margin-top: 28px;">
      &#8220;
    </div>
    <div class="content pl15 fs18 color-grey3 font-c huanhang" style="text-indent: 16px; margin-top: -32px;">
      <%%= news.content %>
    </div>
  <%% } %>
  <div class="footer fr" style="width: 100%; height: 34px;position: relative; overflow: visible; margin-top: 12px;">
    <img class="img34" style="position: absolute; right: 0px; top: 0px; "src="<%%= news.avatar_url %>" />
    <div class="color-grey1 font-c fs-ita fs16 fw-bold" style="position: absolute; right: 42px; top: 0px; line-height: 1.2; height: 16px;"> 
      <%%= news.timestamp %>
    </div>
    <div style="position: absolute; right: 44px; top: 16px; line-height:1.2; height: 16px;">
      <span class="fr color-grey3   fw-bold fs16  font-c">
        <%%= news.author %>
      </span>
      <span class="fr color-grey3 fs16 fs-ita font-c" >
        <%%= news.action %> by&nbsp;   
      </span>
    </div>
  </div>
</div>
</script>

